<Window x:Class="MovieRentApp.Modals.WarningMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="WarningMessageBox" Height="100" Width="300"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">

    <Border Background="#282434"
            CornerRadius="20"
            MouseLeftButtonDown="BorderMouseLeftButtonDown"
            Width="250">
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" 
                       TextAlignment="Center"
                       FontSize="20"
                       Foreground="White"
                       FontWeight="Bold"
                       Margin="0,0,0,0">
                Wypełnij poprawnie 
                <LineBreak/>
                wszystkie pola!
            </TextBlock>
            <StackPanel HorizontalAlignment="Center" Margin="20,0,20,20">
                <Button Width="50" Background="#43A047" Content="OK" Style="{StaticResource DisabledButtonTheme}" Click="OkButton_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
